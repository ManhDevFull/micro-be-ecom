{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "Url": "http://0.0.0.0:5200"
  },
  "ReverseProxy": {
    "Routes": {
      "dotnet-api": {
        "ClusterId": "dotnet-cluster",
        "Match": { "Path": "/api/{**catch-all}" }
      },
      "chat-api": {
        "ClusterId": "chat-cluster",
        "Match": { "Path": "/chat/{**catch-all}" }
      }
    },
    "Clusters": {
      "dotnet-cluster": {
        "Destinations": {
          "dotnetApp": { "Address": "http://localhost:5100" }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "10s",
            "Path": "/health"
          }
        }
      },
      "chat-cluster": {
        "Destinations": {
          "chatApp": { "Address": "http://localhost:5295" }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "10s",
            "Path": "/health"
          }
        }
      }
    }
  }
}

